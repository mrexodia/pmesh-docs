---
interface Props {
	dir: string;
   path: string;
   lang?: string;
}

let { dir,  path, lang } = Astro.props;
lang ??= path.split('.').pop();
import { Code } from "@astrojs/starlight/components";
---

<Code 
   code={(await import(dir+"/"+path+"?raw")).default} 
   lang={lang} 
   title={path} 
/>
